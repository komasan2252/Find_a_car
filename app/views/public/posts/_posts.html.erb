<table class="table">
  <thead>
    <tr>
      <th>イメージ</th>
      <th>メーカー</th>
      <th>ジャンル</th>
      <th>車名</th>
      <th>年号</th>
      <th>年式</th>
      <th>常用定員</th>
      <th></th>
    <tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <% if post.car_image.attached? %>
            <%= link_to post_path(post) do %>
              <%= image_tag post.car_image.variant(resize_to_limit: [300, 200]), class: "img-fluid rounded shadow-sm" %>
            <% end %>
          <% else %>
            <span>画像なし</span>
          <% end %>
        </td>
        <td><%= post.maker.name %></td>
        <td><%= post.genre.name %></td>
        <td><%= post.car_name %></td>
        <td><%= post.year_name_i18n %></td>
        <td><%= post.year_number %>年</td>
        <td><%= post.riding_capacity %>人</td>
        <td><%= link_to "詳細", post, class: "btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


